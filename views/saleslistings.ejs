<% function handleClick(evt) {
  var node = evt.target || evt.srcElement;
  if (node.name == 'edit') {
    node.name = "Modify";
  }
} %>


<body>
<div id="diCoinsHeader">
</div>
	<div class="container">

		
		<div class="grid">
			<div class="row">
				<div class="col-md-9 col-sm-12">
					<div class="accountHeader">	
					Services Sold
					</div>
				</div>
			</div>
		</div>
		
		<hr/>
		
		<% if (posts.length) { %>
                <% posts.forEach(function(post) { %>
				 	<div class="serviceContentContainer">
						<div class="serviceContentColumnContainer">
							<div class="accountElementsHeader"><%= post.title %></div>	
							<div class="accountElementsHeader">
								<% if (post.postedOn) { %>
		                              Posted: <%= post.postedOn %>  <br/>
		                        <% } else { %>
		                        <% } %>
							</div>
							<div class="accountElementsHeader">Sale Price: <%= post.price %> Lab Coins</div>
							<div class="accountElementsHeader">
						 		Purchased By: <%=post.buyer%><br/>
							</div>
							<div class="accountElementsHeader">Description:</div>
							<div class="serviceContentDescription"><%= post.description %></div>			
						</div>						
					</div>	
					<hr/>	
                <% }); %>
        <% } %>


        
	</div>
</body>
