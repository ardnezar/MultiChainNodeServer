<% function handleClick(evt) {
  var node = evt.target || evt.srcElement;
  if (node.name == 'edit') {
    node.name = "Modify";
  }
} %>


<body>
<div id="diCoinsHeader">
</div>
	<div class="container" style="width:500px">
		<div class="page-header text-left">
	        <h1>Leaderboard</h1> 
	    </div>
	    
	    <!-- show any messages that come back with authentication -->
	    <% if (message.length > 0 && messageType <= 0 ) { %>
	        <div class="alert alert-success text-center"><%= message %></div>
	    <% } else if (message.length > 0) { %>
	    	<div class="alert alert-danger text-center"><%= message %></div>
        <% } %>
	    
	
		<div class="leadersContainer">	    
		<% if (leaders.length) { %>	    	        
	    	        <tbody>
				    <% leaders.forEach(function(leader, index) { %>
					<div class="leadersEntry">
						<div class="leadersName"><%=index+1 %>. 
							<% if (leader.firstname) { %>
                                                        	<%= leader.firstname %> <%= leader.lastname %>
                                                	<% } else if(leader.username) { %>
                                                        	<%= leader.username %>
                                                	<% } %>
						</div>
						<div class="leadersPts"><%= leader.points %> pts</div>
					</div>
				    <% }); %>
			<% } %>	


		</div>
	</div>
</body>
