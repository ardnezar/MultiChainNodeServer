<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

    <link rel="stylesheet" type="text/css" href="dicoins.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>       
	<script> 
		$(function(){
  			$("#diCoinsHeader").load("diCoinsHeader.html");   		
		});
	</script> 

    <style>
        body        { padding-top:0px; } 
    </style>
</head>
<body>
<div id="diCoinsHeader">
</div>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span>New Post</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-success"><center><%= message %></center></div>
    <% } %>   

    <!-- POST FORM -->
    <form action="/jobpost" method="post" id="postform">
        <div class="form-group">
            <label>Post Title</label> 
            <br>
	    <div>(If you’d like to REQUEST a service, put “WTB (want to buy) in front of your post title)</div><br/>
            <input type="text" class="form-control" name="title">
            <br>
        </div>
        <div class="form-group">
            <label>Price in LabCoins</label>
            <br>
	    <div>(If you’d like to REQUEST a service, use a negative value in this field for the amount you would PAY for it)</div><br/>
            <input type="text" class="form-control" name="price">
            <br>
        </div>
        <div class="form-group">
            <label>Description</label> 
            <br>
	    <div>(If this is a service REQUEST, explain what you are asking for)</div><br/>
            <textarea rows="4" cols="50" name="description" form="postform">
			</textarea>

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
             
        <button type="reset" class="btn btn-primary">Reset</button>   
    </form>

    <hr>

    <p>Go back Home? <a href="/listjobpost">Home</a></p>

</div>

</div>
</body>
</html>
